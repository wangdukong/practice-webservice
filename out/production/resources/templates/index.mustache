{{>layout/header}}

<h1>스프링 부트로 시작하는 웹 서비스</h1>
<div class="col-md-12">
    <!-- 로그인 기능 영역 -->
    <div class=""row>
        <div class="col-md-6">
            <a href="/posts/save" role="button" class="btn btn-primary">글 등록</a>
            {{#memberName}}
                Logged in as: <span id="user">{{memberName}}</span>
            <a href="/logout" class="btn btn-info active" role="button">Logout</a>
                <!-- 스프링 시큐리티에서 기본 제공하는 로그아웃 url 따로 컨트롤러를 만들 필요를 없다-->

            {{/memberName}}
            {{^memberName}} <!-- 해당 값이 존재하지 않는 경우 ^ 를 사용-->
            <!-- 해당 값이 없다면, 로그인 버튼을 노출시키도록 함-->
                <a href="/oauth2/authorization/google" class="btn btn-success active" role="button">Google Login</a>
                <a href="/oauth2/authorization/naver" class="btn btn-secondary active" role="button">Naver Login</a>
            {{/memberName}}
        </div>
    </div>
    <br>
    <!-- 목록 출력 영역 -->
    <table class="table table-horizontal table-bordered">
        <thread calss="thread-strong">
            <tr>
                <th>게시글 번호</th>
                <th>제목</th>
                <th>작성자</th>
                <th>최종수정일</th>
            </tr>
        </thread>
        <tbody id="tbody">
        {{#posts}} <!-- posts라는 List 순회 for문과 같다. -->
            <tr>
                <td>{{id}}</td><!--List에서 뽑아낸 객체의 필드를 사용 -->
                <td><a href="/posts/update/{{id}}">{{title}}</a></td>
                <td>{{author}}</td>
                <td>{{modifiedDate}}</td>
            </tr>
        {{/posts}}
        </tbody>
    </table>
</div>

{{>layout/footer}}